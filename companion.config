# Configuration du comportement du compagnon de bureau
# Ce fichier permet de personnaliser le comportement de mouvement

# Mode DVD Logo - le compagnon rebondit sur les bords comme un logo DVD (true/false)
# true = mouvement DVD style avec rebonds sur tous les bords
# false = mouvement avec attractions vers bords/coins
DVD_MODE=true

# Vitesse de base du compagnon en mode DVD (pixels par seconde)
DVD_SPEED=60.0
